<p id="notice"><%= notice %></p>

<h1>Listing Account for Customer 
<%= @employee.first_name %>
<%= @employee.last_name %>
</h1>

<!-- a customer can have 0 or 1 account--> 
<!-- if the customer does not have an account we cannot 
    display the account details as the application will crash--> 
<% if @account == nil %>
  <h3> This employee has no account yet. </h3> 
<% else %> 
  <!-- the account exists, let's display its details-->



<table>
  <thead>
    <tr>
      <th>Address1</th>
      <th>Address2</th>
      <th>Comments</th>
      <th>Details</th>
      <th>Employee</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    
      <tr>
        <td><%= account.address1 %></td>
        <td><%= account.address2 %></td>
        <td><%= account.comments %></td>
        <td><%= account.details %></td>
        <td><%= account.employee %></td>
        <td><%= link_to 'Show', employee_account_path(@employee, @account) %></td>
        <td><%= link_to 'Edit', edit_employee_account_path(@employee, @account) %></td>
        <td><%= link_to 'Destroy', employee_account_path(@employee, @account), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  </tbody>
</table>

  <% end %>
  

<br>

<%= link_to 'New Account', new_employee_account_path(@employee) %>
<%= link_to 'Back to employee', @employee %>

